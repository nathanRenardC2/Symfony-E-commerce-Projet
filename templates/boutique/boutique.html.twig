{% extends 'base.html.twig' %}

{% block title %}Shop projet | Boutique{% endblock %}

{% block body %}

<div class="w-screen flex flex-col md:flex-row items-center md:justify-center">
    {% for categorie in categories %}
        <div class="card w-56 bg-base-100 shadow-xl bg-cover transform transition duration-75 hover:scale-110 m-10">
            <figure><img src="{{asset(categorie.visuel)}}" alt="" /></figure>
            <div class="card-body">
                <h2 class="card-title">{{categorie.libelle}}</h2>
                <p class="mb-3">{{categorie.texte}}</p>
                <div class="card-actions justify-end">
                <a href="{{ path('rayon', {'idCategorie' : categorie.id})}}" class="btn">Voir</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}

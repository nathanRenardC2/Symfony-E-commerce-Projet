{% extends 'base.html.twig' %}

{% block title %}Shop projet | Boutique{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="w-screen flex items-center justify-center">
    {% for categorie in categories %}
        <div class="card w-56 bg-base-100 shadow-xl bg-cover transform transition duration-75 hover:scale-110 m-10">
            <figure><img src="{{asset(categorie.visuel)}}" alt="" /></figure>
            <div class="card-body">
                <h2 class="card-title">{{categorie.libelle}}</h2>
                <p class="mb-3">{{categorie.texte}}</p>
                <div class="card-actions justify-end">
                <a href="{{ path('rayon', {'idCategorie' : categorie.id})}}" class="btn">Voir</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
